<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gaurang.hope.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Movies"
        android:id="@+id/b1"
        android:onClick="quizee"
        style="@style/Widget.Design.AppBarLayout"
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:layout_above="@+id/b2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Food"
        android:id="@+id/b2"
        android:onClick="quizee"
        style="@style/Widget.Design.AppBarLayout"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/b1"
        android:layout_alignStart="@+id/b1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src = "@drawable/quiz"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/b1" />

    <Button
        style="@style/Widget.Design.AppBarLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Science"
        android:id="@+id/b3"
        android:onClick="quizee"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:layout_below="@+id/b2"
        android:layout_alignLeft="@+id/b2"
        android:layout_alignStart="@+id/b2" />

</RelativeLayout>
